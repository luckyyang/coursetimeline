ol {
  list-style:none;
  margin: 0;
  padding: 0;
}

a {
  text-decoration: none;
  color: #008c7e;
}
a:hover {
  text-decoration: underline;
}

.clearfix {
  zoom: 1;
}

.clearfix:after {
  clear: both;
  content: ".";
  display: block;
  font-size: 0;
  height: 0;
  line-height: 0;
  visibility: hidden;
}

.page-container {
  width: 850px;
  margin: 20px auto;
  position: relative;
}

#line-container {
  width: 4px;
  text-align: center;
  margin: 0 auto;
  display: block;
}

#line {
  background: #008c7e;
  height: 100%;
  left: 424px;
  width: 3px;
  position: absolute;
}

.timeline-container {
  margin: 0;
  padding: 15px 0;
  position: relative;
}

.timeline-unit {
  width: 355px;
  display: block;
  position: relative;
  padding: 13px 15px;
  margin-bottom: 15px;
  background: #fff;
  border: 1px solid #008c7e;
  border-radius: 3px;
}

.timeline-unit h4 {
  margin: 0 0 0 25px;
}

.timeline-header {
  border-bottom: 1px solid #ddd;
  color: #666;
  font-weight: normal;
  padding-bottom: 5px;
  margin-bottom: 5px;
}
.timeline-avatar  {
  display: block;
  float: left;
  height: 20px;
  width: 20px;
  background: url(<%= asset_path 'luckyyang_icon.jpg' %>) left top no-repeat;
  background-size: 20px;
}

.timeline-unit-date {
  width: 70px;
  position: absolute;
  background: #fff;
  border: 1px solid #008c7e;
  top: 20px;
  text-align: center;
}

.timeline-add-video {
  border: 1px solid #8C0054;
  box-shadow: 0 1px 1px #8C0054;
}

.timeline-update-video {
  border: 1px solid #548C00;
  box-shadow: 0 1px 1px #548C00;
}

.timeline-create-course {
  border: 1px solid #38008C;
  box-shadow: 0 1px 1px #38008C;
}

.timeline-add-video .timeline-unit-date {
  border: 1px solid #8C0054;
  box-shadow: 0 1px 1px #8C000E;
}

.timeline-update-video .timeline-unit-date {
  border: 1px solid #548C00;
  box-shadow: 0 1px 1px #548C00;
}

.timeline-create-course .timeline-unit-date {
  border: 1px solid #38008C;
  box-shadow: 0 1px 1px #38008C;
}

.timeline-unit-left {
  float: left;
  clear: left;
}
.timeline-unit-right {
  float:right;
  clear: right;
}
.timeline-unit-left .timeline-unit-date {
  right: -71px;
  border-left: none;
  box-shadow:none;
}
.timeline-unit-right .timeline-unit-date {
  top: 60px;
  left: -71px;
  border-right: none;
  box-shadow:none;
}
