ol {
  list-style:none;
  margin: 0;
  padding: 0;
}

.clearfix {
  zoom: 1;
}

.clearfix:after {
  clear: both;
  content: ".";
  display: block;
  font-size: 0;
  height: 0;
  line-height: 0;
  visibility: hidden;
}

.page-container {
  width: 900px;
  margin: 20px auto;
}

.timeline-container {
  background: url(<%= asset_path 'line.png' %>) repeat-y center top;
  margin: 0;
  padding: 15px 0;
  position: relative;
}

.timeline-unit {
  width: 404px;
  display: block;
  position: relative;
  padding: 13px 15px;
  margin-bottom: 15px;
  background: #fff;
  border: 1px solid #c4cde0;
  border-radius: 2px;
}

.timeline-unit-left {
  float: left;
  clear: left;
}
.timeline-unit-right {
  float:right;
  clear: right;
}

