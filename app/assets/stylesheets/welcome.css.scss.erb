ol {
  list-style:none;
  margin: 0;
  padding: 0;
}

.clearfix {
  zoom: 1;
}

.clearfix:after {
  clear: both;
  content: ".";
  display: block;
  font-size: 0;
  height: 0;
  line-height: 0;
  visibility: hidden;
}

.page-container {
  width: 850px;
  margin: 20px auto;
  position: relative;
}

#line-container {
  width: 4px;
  text-align: center;
  margin: 0 auto;
  display: block;
}

#line {
  background: #008c7e;
  height: 100%;
  left: 424px;
  width: 3px;
  position: absolute;
}

.timeline-container {
  margin: 0;
  padding: 15px 0;
  position: relative;
}

.timeline-unit {
  width: 355px;
  display: block;
  position: relative;
  padding: 13px 15px;
  margin-bottom: 15px;
  background: #fff;
  border: 1px solid #008c7e;
  border-radius: 2px;
}

.timeline-unit-left {
  float: left;
  clear: left;
}
.timeline-unit-right {
  float:right;
  clear: right;
}
.timeline-unit-date {
  width: 60px;
  position: absolute;
  background: #fff;
  border: 1px solid #008c7e;
  top: 20px;
}
.timeline-unit-left .timeline-unit-date {
  right: -61px;
  border-left: none;
}
.timeline-unit-right .timeline-unit-date {
  top: 60px;
  left: -61px;
  border-right: none;
}

