<h1>List all types of timeline</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Timeline Type</th>
  </tr>
  <% @timelines.each do |timeline| %>
    <tr>
      <td>
        <%= timeline.name %>
      </td>
      <td>
        <%= timeline.timeline_type %>
      </td>
    </tr>
    <% if timeline.timeline_type == ADD_VIDEO %>
      <div class="timeline-add-video">
        <h3>新添加的视频名称</h3>
        <p>
        <%= timeline.name %>
      </p>
    </div>
      <% end %>
    <% else if timeline.timeline_type == UPDATE_VIDEO %>
      <div class="timeline-update-video">
        <h3>更新的视频名称</h3>
        <p>
        <%= timeline.name %>
      </p>
    </div>
      <% end %>
    <% else if timeline.timeline_type == CREATE_COURSE %>
      <div class="timeline-create-course">
        <h3>新创建的课程名称</h3>
        <p>
        <%= timeline.name %>
      </p>
    </div>
      <% end %>
  <% end %>
<% end %>
</table>
